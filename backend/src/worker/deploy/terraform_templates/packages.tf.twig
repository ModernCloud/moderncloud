data "archive_file" "{{ layer_name }}_packages" {
  type = "zip"
  output_path = "{{ zip_file }}"
  source_dir = "{{ root }}"
}

resource "aws_lambda_layer_version" "{{ layer_name }}_packages" {
  layer_name = "{{ layer_name }}_packages"
  filename = "{{zip_file}}"
  source_code_hash = data.archive_file.{{ layer_name }}_packages.output_base64sha256
}