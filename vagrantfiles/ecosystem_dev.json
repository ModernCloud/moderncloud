{
  "apps": [
    {
      "name": "api",
      "script": "npm",
      "args": "run api:serve",
      "cwd": "/vagrant/backend",
      "error_file": "/vagrant/storage/logs/api.dev.err.log",
      "out_file": "/vagrant/storage/logs/api.dev.out.log",
      "exec_mode": "fork_mode",
      "watch": ["/vagrant/backend"],
      "watch_options" : {"usePolling": true},
      "ignore_watch": ["node_modules"]
    },
    {
      "name": "lsp",
      "script": "npm",
      "args": "run serve",
      "cwd": "/vagrant/language-server-proxy",
      "error_file": "/vagrant/storage/logs/lsp.dev.err.log",
      "out_file": "/vagrant/storage/logs/lsp.dev.out.log",
      "exec_mode": "fork_mode",
      "watch": ["/vagrant/language-server-proxy"],
      "watch_options" : {"usePolling": true},
      "ignore_watch": ["node_modules"]
    },
    {
      "name": "worker",
      "script": "npm",
      "args": "run worker:serve",
      "cwd": "/vagrant/backend",
      "error_file": "/vagrant/storage/logs/worker.dev.err.log",
      "out_file": "/vagrant/storage/logs/worker.dev.out.log",
      "exec_mode": "fork_mode",
      "watch": ["/vagrant/backend"],
      "watch_options" : {"usePolling": true},
      "ignore_watch": ["node_modules"]
    }
  ]
}